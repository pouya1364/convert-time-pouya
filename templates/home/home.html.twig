{% extends 'base.html.twig' %}
{% block title %}Mars Convertor{% endblock %}
{% block body %}
    <div class="d-flex align-items-center justify-content-center">
      {# Form Section #}
      {{ form_start(form, {'attr': {'class':'col-sm-3', 'id': 'form_convert'}}) }}
          {{ form_widget(form) }}
      {{ form_end(form) }}
    </div>
    <div id='alert' style="height: 50px; display:none;" class="text-center alert alert-danger" role="alert" ></div>  
    <div class="d-flex align-items-center justify-content-center" style="height: 350px">
      <div class="col-sm-3">
				<div class="card">
					<div class="card-header">
						Mars Sol Date (MSD) 
					</div>
					<div class="card-body">
						<h5 class="card-title" id="show_date">Converted Date</h5>
              <h7 class="card-title" id="mars_date"></h7>
					</div>
				</div>
        </div>
        <div class="col-sm-3">
        <div class="card">
					<div class="card-header" >
						Martian Coordinated Time (MTC)
					</div>
					<div class="card-body">
						<h5 class="card-title" id="show_time">Converted Time</h5>
              <h7 class="card-title" id="martin_date"></h7>
					</div>
				</div>
        </div>
			</div>
		</div>
    {% block javascripts %}
        {{parent()}}
        <script src={{ asset('asset/js/home.js') }}></script> 
    {% endblock %}
{% endblock %}
